<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Welcome home</h1>
    <p>book unique homes and experience a city like local.</p>
    <form  class=" form-inline ">
      <input class="form-control input-lg" placeholder="Where?" type="text">
      <input class="form-control input-lg" placeholder="When?" type="text">
      <select name="" id="" class="form-control input-lg">
         <option value="1">1 guest</option>
         <option value="2">2 guests</option>
         <option value="3">3 guests</option>
       </select>
      <a class="btn btn-primary btn-lg">Search</a>
    </form>
  </div>
</div>

<div class="container">
  <div class="row">
    <% data.members.each do |member| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <!-- insert <div class="card"> -->
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('https://kitt.lewagon.com/placeholder/cities/<%= member.city %>');">
          <div class="card-category"><%= member.city%>, <%=  member.country  %></div>
          <div class="card-description">
            <h3><%= member.name %>'s home</h3>
            <p>Nice flat in Piccadilly</p>
            <p class="rating">
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
            </p>
            </div>
          <img src="https://kitt.lewagon.com/placeholder/users/<%= member.github_nickname %>" class="card-user" alt="Monsieurpaillard">
          </div>
          </div>
          <% end %>
          <a href="#" class="card-link"></a>
        </div>
    </div>
